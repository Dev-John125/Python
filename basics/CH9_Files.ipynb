    "# A function to create several multiplication table files in a folder \n",
    "for i in range(2, 21):\n",
    "    with open(f\"tables/Multiplication_table_of_{i}.txt\", 'w') as f:\n",
    "        for j in range(1, 11):\n",
    "            f.write(f\"{i} x {j} = {i*j}\") #fstring for formatting\n",
    "            if j!=10:\n",
    "                f.write('\\n')\n"
   ]
