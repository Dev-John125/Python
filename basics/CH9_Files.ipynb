    "#using with to open text files automatically closes the file after execution\n",
    "with open('another.txt', 'r') as f:\n",
    "    a = f.read()\n",
    "with open('another.txt', 'w') as f:\n",
    "    a = f.write(\"me\") # overwrites the previous text\n",
    "print(a)"
   ]
