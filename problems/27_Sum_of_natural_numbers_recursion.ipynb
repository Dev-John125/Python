    "## 27. To find the sum of natural numbers using recursion"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "22b98af0",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter a number: 9\n",
      "The sum is : 45\n"
     ]
    }
   ],
   "source": [
    "def recur_sum(n):\n",
    "    if (n != 0):\n",
    "        return n + recur_sum(n - 1);\n",
    "    else:\n",
    "        return n;\n",
    "\n",
    "a=int(input(\"Enter a number: \"))\n",
    "print(\"The sum is :\",recur_sum(a))"
   ]
